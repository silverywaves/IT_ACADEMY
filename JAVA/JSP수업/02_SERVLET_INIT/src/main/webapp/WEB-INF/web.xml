<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>02_SERVLET_INIT</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>	<!-- 서블릿을 정의 -->
  	<servlet-name>C02Servlet_Test</servlet-name>	<!-- servlet-name: 서블릿의 이름을 지정 -->
  	<servlet-class>Servlet.C02Servlet_Test</servlet-class>	<!-- servlet-class: 서블릿의 클래스 경로를 지정 -->
  </servlet>
  <servlet-mapping>	<!-- 서블릿과 URL 패턴을 매핑 -->
  	<servlet-name>C02Servlet_Test</servlet-name>	<!-- servlet-name: 위에서 정의한 서블릿의 이름을 지정 -->
  	<url-pattern>/Servlet_Test02</url-pattern>	<!-- url-pattern: 서블릿에 접근하기 위한 URL 패턴을 지정 -->
  </servlet-mapping>
</web-app>